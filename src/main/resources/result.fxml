<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<StackPane xmlns="http://javafx.com/javafx/11.0.1"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="ResultController"
           style="-fx-background-color: linear-gradient(to bottom, #A3B18A, #588157);">

    <VBox alignment="CENTER"
          spacing="25"
          maxWidth="650"
          style="
              -fx-background-color: rgba(218,215,205,0.75);   /* DAD7CD with transparency */
              -fx-background-radius: 20;
              -fx-border-radius: 20;
              -fx-border-color: #3A5A40;                      /* deep evergreen border */
              -fx-border-width: 2;
              -fx-padding: 30 40;
          ">

        <!-- FULL MESSAGE SHOWN -->
        <Label fx:id="resultMessageLabel"
               wrapText="true"
               maxWidth="600"
               textAlignment="CENTER"
               style="-fx-font-size: 28;
                      -fx-font-weight: bold;
                      -fx-text-fill: #344E41;" />               <!-- darker green -->

        <!-- Winnings label -->
        <Label fx:id="winningsLabel"
               text="/$0"
               style="-fx-font-size: 22;
                      -fx-font-weight: bold;
                      -fx-text-fill: #3A5A40;" />              <!-- matching green -->

        <!-- Buttons -->
        <HBox spacing="25" alignment="CENTER">

            <Button fx:id="playAgainButton"
                    text="Play Again"
                    onAction="#handlePlayAgain"
                    prefWidth="150" prefHeight="42"
                    style="
                        -fx-background-color: #588157;
                        -fx-text-fill: white;
                        -fx-font-size: 16;
                        -fx-font-weight: bold;
                        -fx-background-radius: 8;
                    "/>

            <Button fx:id="exitButton"
                    text="Exit"
                    onAction="#handleExit"
                    prefWidth="150" prefHeight="42"
                    style="
                        -fx-background-color: #3A5A40;
                        -fx-text-fill: white;
                        -fx-font-size: 16;
                        -fx-font-weight: bold;
                        -fx-background-radius: 8;
                    "/>

        </HBox>

    </VBox>
</StackPane>
