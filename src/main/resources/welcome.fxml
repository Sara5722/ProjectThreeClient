<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="WelcomeController">
    <center>
        <VBox alignment="CENTER" spacing="20">
            <Text text="Welcome to 3-Card Poker!!" style="-fx-font-size: 24; -fx-font-weight: bold;"/>

            <VBox alignment="CENTER_LEFT" spacing="10">
                <Label text="IP Address:"/>
                <TextField fx:id="ipAddressField" promptText="localhost" prefWidth="200"/>

                <Label text="Port Number:"/>
                <TextField fx:id="portField" promptText="5555" prefWidth="200"/>
            </VBox>

            <Button fx:id="connectButton" text="Connect" onAction="#handleConnectButton"
                    prefWidth="100" prefHeight="30"/>

            <Label fx:id="statusLabel" text="Enter connection details"/>
        </VBox>
    </center>

    <padding><Insets top="50" right="50" bottom="50" left="50"/></padding>
</BorderPane>