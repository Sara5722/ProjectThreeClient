<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="GamePlayController"
            stylesheets="@styles.css">

    <top>
        <MenuBar>
            <Menu text="Options">
                <MenuItem text="Exit" onAction="#handleExit"/>
                <MenuItem text="Fresh Start" onAction="#handleFreshStart"/>
                <MenuItem text="New Look" onAction="#handleNewLook"/>
            </Menu>
        </MenuBar>
    </top>

    <center>
        <VBox spacing="30" alignment="CENTER">
            <!-- Dealer Section -->
            <VBox spacing="15" alignment="CENTER" styleClass="dealer-area">
                <Text text="Dealer's Hand" style="-fx-font-size: 18; -fx-font-weight: bold; -fx-fill: #FF5722;"/>
                <HBox spacing="10" alignment="CENTER">
                    <ImageView fx:id="dealerCard1" fitWidth="100" fitHeight="140" preserveRatio="true" styleClass="image-view"/>
                    <ImageView fx:id="dealerCard2" fitWidth="100" fitHeight="140" preserveRatio="true" styleClass="image-view"/>
                    <ImageView fx:id="dealerCard3" fitWidth="100" fitHeight="140" preserveRatio="true" styleClass="image-view"/>
                </HBox>
            </VBox>

            <!-- Player Section -->
            <VBox spacing="15" alignment="CENTER" styleClass="player-area">
                <Text text="Your Hand" style="-fx-font-size: 18; -fx-font-weight: bold; -fx-fill: #4CAF50;"/>
                <HBox spacing="10" alignment="CENTER">
                    <ImageView fx:id="playerCard1" fitWidth="100" fitHeight="140" preserveRatio="true" styleClass="image-view"/>
                    <ImageView fx:id="playerCard2" fitWidth="100" fitHeight="140" preserveRatio="true" styleClass="image-view"/>
                    <ImageView fx:id="playerCard3" fitWidth="100" fitHeight="140" preserveRatio="true" styleClass="image-view"/>
                </HBox>
            </VBox>

            <!-- Betting Controls -->
            <VBox spacing="15" alignment="CENTER" styleClass="betting-panel">
                <HBox spacing="30" alignment="CENTER">
                    <VBox spacing="10" alignment="CENTER">
                        <Label text="Ante Bet: $5 - $25" style="-fx-text-fill: white; -fx-font-weight: bold;"/>
                        <Slider fx:id="anteBetSlider" min="5" max="25" value="5" majorTickUnit="5"
                                showTickLabels="true" showTickMarks="true" snapToTicks="true" prefWidth="200"/>
                        <Label fx:id="anteBetLabel" text="Ante: $5" style="-fx-text-fill: white; -fx-font-weight: bold;"/>
                    </VBox>

                    <VBox spacing="10" alignment="CENTER">
                        <Label text="Pair Plus Bet: $0 - $25" style="-fx-text-fill: white; -fx-font-weight: bold;"/>
                        <Slider fx:id="pairPlusBetSlider" min="0" max="25" value="0" majorTickUnit="5"
                                showTickLabels="true" showTickMarks="true" snapToTicks="true" prefWidth="200"/>
                        <Label fx:id="pairPlusBetLabel" text="Pair Plus: $0" style="-fx-text-fill: white; -fx-font-weight: bold;"/>
                    </VBox>
                </HBox>

                <HBox spacing="20" alignment="CENTER">
                    <Button fx:id="dealButton" text="DEAL" onAction="#handleDealButton"
                            style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14;"
                            prefWidth="100" prefHeight="40"/>
                    <Button fx:id="foldButton" text="FOLD" onAction="#handleFoldButton"
                            style="-fx-background-color: #FF5722; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14;"
                            prefWidth="100" prefHeight="40" disable="true"/>
                    <Button fx:id="playButton" text="PLAY" onAction="#handlePlayButton"
                            style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14;"
                            prefWidth="100" prefHeight="40" disable="true"/>
                </HBox>
            </VBox>
        </VBox>
    </center>

    <bottom>
        <VBox spacing="10">
            <TextArea fx:id="gameInfoTextArea" prefHeight="120" promptText="Game information will appear here..."
                      styleClass="game-info" editable="false"/>

            <HBox spacing="30" alignment="CENTER">
                <Label fx:id="anteBetLabelBottom" text="Ante: $5" style="-fx-text-fill: white; -fx-font-weight: bold;"/>
                <Label fx:id="pairPlusBetLabelBottom" text="Pair Plus: $0" style="-fx-text-fill: white; -fx-font-weight: bold;"/>
                <Label fx:id="playBetLabel" text="Play: $0" style="-fx-text-fill: white; -fx-font-weight: bold;"/>
                <Label fx:id="totalWinningsLabel" text="Total winnings: $0" style="-fx-text-fill: #FFD700; -fx-font-weight: bold;"/>
            </HBox>
        </VBox>
    </bottom>

    <padding><Insets top="10" right="20" bottom="10" left="20"/></padding>
</BorderPane>