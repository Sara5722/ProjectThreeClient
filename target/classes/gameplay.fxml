<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="GamePlayController">

    <top>
        <MenuBar>
            <Menu text="Options">
                <MenuItem text="Exit"/>
                <MenuItem text="Fresh Start"/>
                <MenuItem text="New Look"/>
            </Menu>
        </MenuBar>
    </top>

    <center>
        <HBox spacing="50" alignment="CENTER">
            <!-- Left Side: Player's Area -->
            <VBox spacing="15" alignment="CENTER">
                <Text text="Your Hand" style="-fx-font-size: 16; -fx-font-weight: bold;"/>
                <HBox spacing="10" alignment="CENTER">
                    <ImageView fx:id="playerCard1" fitWidth="80" fitHeight="120" preserveRatio="true"/>
                    <ImageView fx:id="playerCard2" fitWidth="80" fitHeight="120" preserveRatio="true"/>
                    <ImageView fx:id="playerCard3" fitWidth="80" fitHeight="120" preserveRatio="true"/>
                </HBox>

                <VBox spacing="10" alignment="CENTER_LEFT">
                    <Label text="Ante Bet: $5 - $25"/>
                    <Slider fx:id="anteBetSlider" min="5" max="25" value="5" majorTickUnit="5"
                            showTickLabels="true" showTickMarks="true" snapToTicks="true"/>
                    <Label fx:id="anteBetLabel" text="Ante: $5"/>

                    <Label text="Pair Plus Bet: $0 - $25"/>
                    <Slider fx:id="pairPlusBetSlider" min="0" max="25" value="0" majorTickUnit="5"
                            showTickLabels="true" showTickMarks="true" snapToTicks="true"/>
                    <Label fx:id="pairPlusBetLabel" text="Pair Plus: $0"/>
                </VBox>

                <Button fx:id="dealButton" text="Deal" onAction="#handleDealButton"
                        prefWidth="100" prefHeight="30"/>
            </VBox>

            <!-- Right Side: Dealer's Area -->
            <VBox spacing="15" alignment="CENTER">
                <Text text="Dealer's Hand" style="-fx-font-size: 16; -fx-font-weight: bold;"/>
                <HBox spacing="10" alignment="CENTER">
                    <ImageView fx:id="dealerCard1" fitWidth="80" fitHeight="120" preserveRatio="true"/>
                    <ImageView fx:id="dealerCard2" fitWidth="80" fitHeight="120" preserveRatio="true"/>
                    <ImageView fx:id="dealerCard3" fitWidth="80" fitHeight="120" preserveRatio="true"/>
                </HBox>

                <HBox spacing="20" alignment="CENTER">
                    <Button fx:id="foldButton" text="Fold" onAction="#handleFoldButton"
                            prefWidth="80" prefHeight="30" disable="true"/>
                    <Button fx:id="playButton" text="Play" onAction="#handlePlayButton"
                            prefWidth="80" prefHeight="30" disable="true"/>
                </HBox>
            </VBox>
        </HBox>
    </center>

    <bottom>
        <VBox spacing="10">
            <TextArea fx:id="gameInfoTextArea" prefHeight="100" promptText="Place your bets..."
                      editable="false" style="-fx-font-family: monospace;"/>

            <HBox spacing="30" alignment="CENTER">
                <Label fx:id="anteBetLabelBottom" text="Ante: $0" style="-fx-font-weight: bold;"/>
                <Label fx:id="pairPlusBetLabelBottom" text="Pair Plus: $0" style="-fx-font-weight: bold;"/>
                <Label fx:id="playBetLabel" text="Play: $0" style="-fx-font-weight: bold;"/>
                <Label fx:id="totalWinningsLabel" text="Total winnings: $0" style="-fx-font-weight: bold;"/>
            </HBox>
        </VBox>
    </bottom>

    <padding><Insets top="10" right="20" bottom="10" left="20"/></padding>
</BorderPane>