<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/11.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="ResultController"
      alignment="CENTER" spacing="20">

    <Label fx:id="resultMessageLabel" style="-fx-font-size: 24; -fx-font-weight: bold;"/>

    <Label fx:id="winningsLabel" style="-fx-font-size: 16;"/>

    <HBox spacing="20" alignment="CENTER">
        <Button fx:id="playAgainButton" text="Play Again" onAction="#handlePlayAgain"
                prefWidth="120" prefHeight="40"/>
        <Button fx:id="exitButton" text="Exit" onAction="#handleExit"
                prefWidth="120" prefHeight="40"/>
    </HBox>

    <padding><Insets top="50" right="50" bottom="50" left="50"/></padding>
</VBox>