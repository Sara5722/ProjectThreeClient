<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="WelcomeController"
            prefWidth="700" prefHeight="420"
            style="
                -fx-background-color: linear-gradient(to bottom, #b0e6e0, #89c3d1);
            ">

    <!-- REMOVE ALL TOP SHADOWS â†’
         So title is clean like the server UI -->
    <padding>
        <Insets top="20" right="20" left="20" bottom="20"/>
    </padding>

    <!-- ================= TOP TITLE ================= -->
    <top>
        <VBox alignment="CENTER">
            <Label text="3-Card Poker Client"
                   style="
                       -fx-font-size: 34px;
                       -fx-font-weight: bold;
                       -fx-text-fill: #7d4ab7;
                   "/>
        </VBox>
    </top>

    <!-- ================= CENTER CONTENT ================= -->
    <center>
        <VBox alignment="CENTER" spacing="20">

            <!-- Rounded card-like container -->
            <VBox spacing="16" alignment="CENTER"
                  style="
                      -fx-background-color: rgba(255,255,255,0.55);
                      -fx-padding: 20;
                      -fx-background-radius: 20;
                      -fx-border-radius: 20;
                      -fx-border-color: #7d4ab7;
                      -fx-border-width: 2;
                  "
                  maxWidth="360">

                <Label text="Connect to Server"
                       style="
                           -fx-font-size: 20;
                           -fx-font-weight: bold;
                           -fx-text-fill: #333;
                       "/>

                <!-- IP FIELD -->
                <VBox alignment="CENTER_LEFT">
                    <Label text="IP Address:"
                           style="-fx-font-weight: bold; -fx-text-fill: #3c3c3c;"/>
                    <TextField fx:id="ipAddressField"
                               promptText="localhost"
                               style="
                                   -fx-background-radius: 10;
                                   -fx-padding: 8;
                                   -fx-font-size: 14px;
                               "/>
                </VBox>

                <!-- PORT FIELD -->
                <VBox alignment="CENTER_LEFT">
                    <Label text="Port Number:"
                           style="-fx-font-weight: bold; -fx-text-fill: #3c3c3c;"/>
                    <TextField fx:id="portField"
                               promptText="5555"
                               style="
                                   -fx-background-radius: 10;
                                   -fx-padding: 8;
                                   -fx-font-size: 14px;
                               "/>
                </VBox>

                <!-- CONNECT BUTTON -->
                <Button fx:id="connectButton"
                        text="Connect"
                        prefWidth="160" prefHeight="38"
                        onAction="#handleConnectButton"
                        style="
                            -fx-background-color: #7d4ab7;
                            -fx-text-fill: white;
                            -fx-font-size: 16px;
                            -fx-font-weight: bold;
                            -fx-background-radius: 12;
                            -fx-cursor: hand;
                        "/>

                <!-- STATUS LABEL -->
                <Label fx:id="statusLabel"
                       text="Enter server info..."
                       style="-fx-text-fill: #4a3d72; -fx-font-size: 14;"/>
            </VBox>

        </VBox>
    </center>

</BorderPane>
